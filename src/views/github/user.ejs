<section>
    <div class="clearfix">
        <img class="pull-left img-avatar img-avatar-lg" src="<%= avatar_url %>" alt="<%= name %>" />
        <h2 class="pull-left">
            <%= name %>
        </h2>
    </div>
    <ul class="list-unstyled">
        <% for(var i=0; i<repos.length; i++) {%>
            <li>
                <a href="<%=repos[i].html_url%>" target="_blank">
                    <%=repos[i].name%>
                </a>
                <p>
                    <%=repos[i].description%>
                </p>
            </li>
            <%}%>
    </ul>
</section>
